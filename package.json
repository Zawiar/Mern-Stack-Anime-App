{
  "name": "anime-project",
  "version": "1.0.0",
  "engines": {
    "node": "10.15.x",
    "yarn": "1.x"
  },
  "description": "A full stack anime project",
  "main": "server.js",
  "scripts": {
    "build": "cd client && yarn run build",
    "install": "cd client && yarn install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false YARN_PRODUCTION=false yarn add --prefix client yarn run build --prefix build"
  },
  "author": "kazuya",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
